<h1>List Student</h1>

<p><%= notice %></p>

<%= link_to 'New Student', new_student_path %>
<table border="1">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td>
                    <%= link_to 'Detail', student %> |
                    <%= link_to 'Edit', edit_student_path(student) %> |
                    <%= link_to 'Delete', student, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
