<%= form_with model: student do |form| %>
    <% if @student.errors.any? %>
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited this post from being saved:</h2>
        <% @student.errors.full_messages.each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>
    <div>
      <%= form.label :first_name %><br>
      <%= form.text_field :first_name %>
    </div>
    <div>
      <%= form.label :last_name %><br>
      <%= form.text_field :last_name %>
    </div>
    <div>
      <%= form.label :email %><br>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :date_of_birth %><br>
      <%= form.date_field :date_of_birth %>
    </div>
    <div>
      <%= form.label :address %><br>
      <%= form.text_field :address %>
    </div>
    <div>
      <%= form.label :contact %><br>
      <%= form.text_field :contact %>
    </div>

    <br>
    <div>
        <%= form.submit %>
    </div>
